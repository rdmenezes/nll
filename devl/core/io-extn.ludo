/**
 @ingroup core
 @brief IO operator on specific types
 */
OFStream operator<<( OFStream s, Matrix3f v )
{
   int n = 0;
   while ( n < 9 )
   {
      s << v.vals[ n ] << " ";
      n = n + 1;
   }
   s << "\n";
   return s;
}

/**
 @ingroup core
 @brief IO operator on specific types
 */
IFStream operator>>( IFStream s, Matrix3f& v )
{
   int n = 0;
   while ( n < 9 )
   {
      s >> v.vals[ n ];
      n = n + 1;
   }
   return s;
}

