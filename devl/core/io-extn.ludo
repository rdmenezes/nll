/**
 @ingroup core
 @brief IO operator on specific types
 */
OFStream operator<<( OFStream s, Vector3i v )
{
   s << v[ 0 ] << " " << v[ 1 ] << " " << v[ 2 ] << "\n";
   return s;
}

/**
 @ingroup core
 @brief IO operator on specific types
 */
IFStream operator>>( IFStream s, Vector3i& v )
{
   s >> v[ 0 ] >> v[ 1 ] >> v[ 2 ];
   return s;
}

